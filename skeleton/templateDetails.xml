<?xml version="1.0" encoding="utf-8"?>
<extension version="1.6" type="template" client="site">

    <name>skeleton</name>
    <version>1.3.0</version>
    <creationDate>Feb 2012</creationDate>
    <author>Xavier Pallicer</author>
    <authorEmail>xpallicer@cloudhotelier.com</authorEmail>
    <authorUrl>http://www.cloudhotelier.com</authorUrl>
    <copyright>Copyright (C) 2012 CloudHotelier. All rights reserved.</copyright>
    <license>GNU/GPL v3 or later</license>
    <description>TPL_SKELETON_DESC</description>

    <config>
        <fields name="params">
            <fieldset name="advanced">
                <field name="style" type="folderlist" default="" label="TPL_SKELETON_STYLE" description="TPL_SKELETON_STYLE_DESC" directory="templates/skeleton/assets/styles" hide_default="true" />
                <field name="background" type="filelist" default="" label="TPL_SKELETON_BACKGROUND" description="TPL_SKELETON_BACKGROUND_DESC" directory="templates/skeleton/assets/backgrounds" hide_default="true" filter="\.jpg" />
                <field name="font_text" type="text" default="" label="TPL_SKELETON_FONT_TEXT_URL" description="TPL_SKELETON_FONT_TEXT_URL_DESC" />
                <field name="font_text_style" type="text" default="" label="TPL_SKELETON_FONT_TEXT_STYLE" description="TPL_SKELETON_FONT_TEXT_STYLE_DESC" />
                <field name="font_headers" type="text" default="" label="TPL_SKELETON_FONT_HEADERS_URL" description="TPL_SKELETON_FONT_HEADERS_URL_DESC" />
                <field name="font_headers_style" type="text" default="" label="TPL_SKELETON_FONT_HEADERS_STYLE" description="TPL_SKELETON_FONT_HEADERS_STYLE_DESC" />
                <field name="analytics" type="text" default="" label="TPL_SKELETON_ANALYTICS" description="TPL_SKELETON_ANALYTICS_DESC" />
                <field name="jquery" type="list" default="" label="TPL_SKELETON_JQUERY" description="TPL_SKELETON_JQUERY_DESC">
                    <option value="1">TPL_SKELETON_JQUERY_LOCAL</option>
                    <option value="2">TPL_SKELETON_JQUERY_CDN</option>
                    <option value="0">TPL_SKELETON_JQUERY_NONE</option>
                </field>
            </fieldset>
        </fields>
    </config>

    <languages folder="languages">
            <language tag="en-GB">en-GB.tpl_skeleton.ini</language>
            <language tag="en-GB">en-GB.tpl_skeleton.sys.ini</language>
            <language tag="es-ES">es-ES.tpl_skeleton.ini</language>
            <language tag="es-ES">es-ES.tpl_skeleton.sys.ini</language>
            <language tag="ca-ES">ca-ES.tpl_skeleton.ini</language>
            <language tag="ca-ES">ca-ES.tpl_skeleton.sys.ini</language>
    </languages>

    <files>
        <folder>assets</folder>
        <folder>css</folder>
        <folder>html</folder>
        <folder>images</folder>
        <folder>js</folder>
        <folder>language</folder>
        <filename>component.php</filename>
        <filename>credits.txt</filename>
        <filename>favicon.ico</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <filename>index.php</filename>
        <filename>raw.php</filename>
        <filename>templateDetails.xml</filename>
        <filename>template_thumbnail.png</filename>
    </files>

    <positions>
        <position>logo</position>
        <position>menu</position>
        <position>toolbar</position>
        <position>breadcrumbs</position>
        <position>top-a</position>
        <position>top-b</position>
        <position>bottom-a</position>
        <position>bottom-b</position>
        <position>innertop</position>
        <position>innerbottom</position>
        <position>sidebar-a</position>
        <position>sidebar-b</position>
        <position>footer</position>
        <position>copy</position>
        <position>debug</position>
    </positions>

</extension>